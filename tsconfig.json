{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "lib": [
      "DOM",
      "ES2017",
      "DOM.Iterable",
      "ES2016.Array.Include"
    ],
    "moduleResolution": "classic",
    "outDir": "gen/",
    "rootDirs": [
      "src",
      "node_modules/"
    ],
    "noEmitHelpers": true,
    "noEmitOnError": true,

    "strict": true,
    "strictPropertyInitialization": false,
    "strictBindCallApply": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ]
}
