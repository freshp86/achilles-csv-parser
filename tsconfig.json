{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES6",

    "outDir": "dist/esm",
    "rootDir": "src",

    "noEmitHelpers": true,
    "noEmitOnError": true,
    "declaration": true,
    "composite": true,

    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    "typeRoots": []
  },
  "include": [
    "src/**/*.ts"
  ]
}
