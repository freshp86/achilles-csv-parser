{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES6",

    "outDir": "dist/tests",
    "rootDir": "tests",

    "allowJs": true,
    "checkJs": false,

    "noEmitHelpers": true,
    "noEmitOnError": true,

    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": [
    "tests/**/*.js",
    "tests/**/*.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.json"
    }
  ]
}
